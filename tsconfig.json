{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": ["ESNext", "DOM"],
        "target": "ES6",
        "module": "CommonJS",
        "removeComments": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
    }
}
